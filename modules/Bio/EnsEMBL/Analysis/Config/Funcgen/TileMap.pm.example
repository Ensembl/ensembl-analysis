package Bio::EnsEMBL::Analysis::Config::Funcgen::TileMap;

use strict;
use vars qw(%Config);

%Config = 
    (
     CONFIG => {
         DEFAULT => {
             EFGDB => {
                 -dbname => $ENV{'DBNAME'},
                 -host => $ENV{'DBHOST'},
                 -port => $ENV{'DBPORT'} || 3306,
                 -species => $ENV{'SPECIES'},
                 -user => 'ensadmin',
                 -pass => 'ensembl',
             },
             MODULE            => 'TileMap',
             PROGRAM           => 'TileMap',
             PROGRAM_FILE      => 'tilemap',
             VERSION           => '2.0',
             TEMPLATE_FILE 
                 => "$ENV{HOME}/src/tilemap/readme/TileMap_arg.txt",
             NORM_METHOD       => 'VSN_GLOG', 
             RESULT_SET_REGEXP => 'BR._TR.', 
             SCORE_FACTOR      => 1,
             ANALYSIS_WORK_DIR => "$ENV{ANALYSIS_WORK_DIR}/$ENV{DBNAME}",
         },
         TILEMAP => {
             # Method to combine neighboring probes (0:HMM, 1:MA)
             METHOD => 0,
             # Posterior probability > val (default: 0.5)
             POSTPROB => 0.5,
             # Maximal gap allowed (1000: default)
             MAXGAP => 100,
             # Expected hybridization length (28: default)
             HYBLENGTH => 50,
         },

     });

sub import {
    my ($callpack) = caller(0); # Name of the calling package
    my $pack = shift; # Need to move package off @_
    
    # Get list of variables supplied, or else all
    my @vars = @_ ? @_ : keys(%Config);
    return unless @vars;
    
    # Predeclare global variables in calling package
    eval "package $callpack; use vars qw("
        . join(' ', map { '$'.$_ } @vars) . ")";
    die $@ if $@;
    
    
    foreach (@vars) {
        if (defined $Config{ $_ }) {
            no strict 'refs';
            # Exporter does a similar job to the following
            # statement, but for function names, not
            # scalar variables:
            *{"${callpack}::$_"} = \$Config{ $_ };
        } else {
            die "Error: Config: $_ not known\n";
        }
    }
}

1;
