package Bio::EnsEMBL::Analysis::Config::Funcgen::Splitter;
use strict;
use vars qw(%Config);

%Config = 
    (
     CONFIG => {
         DEFAULT => {
             DNADB => {
                 -dbname => $ENV{'CORE_DBNAME'},
                 -host => $ENV{'CORE_HOST'},
                 -port => $ENV{'CORE_PORT'} || 3306,
                 -species => $ENV{'SPECIES'},
                 -user => $ENV{'CORE_USER'},
             },
             EFGDB => {
                 -dbname => $ENV{'EFG_DBNAME'},
                 -host => $ENV{'EFG_HOST'},
                 -port => $ENV{'EFG_PORT'} || 3306,
                 -species => $ENV{'SPECIES'},
                 -user => $ENV{'EFG_WRITE_USER'},
                 -pass => $ENV{'PASS'},
             },
             MODULE            => 'Splitter',
             PROGRAM           => 'Splitter',
             PROGRAM_FILE      => 'splitter.cgi',
             VERSION           => '0.1',
             #PARAMETERS        => "'norm=none' 'combine=median' 'cutoff=2sd' 'maxgap=100' 'minrun=4'",
             NORM_METHOD       => $ENV{NORM_METHOD},
             RESULT_SET_REGEXP => '_IMPORT',
             ANALYSIS_WORK_DIR => $ENV{ANALYSIS_WORK_DIR},
         },
#         Splitter_default => {
#             PARAMETERS        => "'norm=none' 'combine=median' 'cutoff=2sd' 'maxgap=100' 'minrun=4'",
#         }
     });

sub import {
    my ($callpack) = caller(0); # Name of the calling package
    my $pack = shift; # Need to move package off @_
    
    # Get list of variables supplied, or else all
    my @vars = @_ ? @_ : keys(%Config);
    return unless @vars;
    
    # Predeclare global variables in calling package
    eval "package $callpack; use vars qw("
        . join(' ', map { '$'.$_ } @vars) . ")";
    die $@ if $@;
    
    
    foreach (@vars) {
        if (defined $Config{ $_ }) {
            no strict 'refs';
            # Exporter does a similar job to the following
            # statement, but for function names, not
            # scalar variables:
            *{"${callpack}::$_"} = \$Config{ $_ };
        } else {
            die "Error: Config: $_ not known\n";
        }
    }
}

1;
